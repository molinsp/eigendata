{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    //"strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "noImplicitAny": false
  },
  "include": ["src/*"],
  "rules": {
    "no-unused-vars": "off"
  }
}
